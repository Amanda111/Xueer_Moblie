{
  "name": "xueer_moblie",
  "version": "0.0.1",
  "description": "the Web App of Xueer",
  "main": "index.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prebuild": "npm run scss",
    "build": "webpack --display-modules --optimize-minimize",
    "scss": "node-sass app/css/common/main.scss --output assets/",
    "postscss": "postcss --use postcss-px2rem --postcss-px2rem.remUnit '36' --postcss-px2rem.baseDpr '1' --use autoprefixer --autoprefixer.browsers '> 5%' < assets/main.css | cssmin > assets/main.min.css",
    "watch:webpack": "webpack --watch",
    "watch:css": "watch 'npm run scss' ./app/css/*",
    "watch": "parallelshell 'npm run watch:css' 'npm run watch:webpack'",
    "clean":"rm -rf **/*.log.*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Muxi-Studio/Xueer_Moblie.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Muxi-Studio/Xueer_Moblie/issues"
  },
  "homepage": "https://github.com/Muxi-Studio/Xueer_Moblie#readme",
  "dependencies": {
    "backbone": "^1.2.3",
    "backbone.paginator": "^2.0.2",
    "css-loader": "^0.23.0",
    "cssmin": "^0.4.3",
    "exports-loader": "^0.6.2",
    "imports-loader": "^0.6.5",
    "mockjs": "^0.1.10",
    "node-sass": "^3.4.2",
    "parallelshell": "^2.0.0",
    "postcss-px2rem": "^0.2.0",
    "px2rem": "^0.4.2",
    "style-loader": "^0.13.0",
    "underscore": "^1.8.3",
    "watch": "^0.16.0",
    "webpack": "^1.12.6",
    "webpack-dev-server": "^1.12.1"
  }
}
